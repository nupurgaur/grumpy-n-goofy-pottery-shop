{% comment %} Converted from src/components/FeaturedProducts.tsx {% endcomment %}
<section class="featured-products">
  <div class="container">
    {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
    {% assign featured_collection = collections[section.settings.collection] %}
    <div class="grid products">
      {% if featured_collection %}
        {% for product in featured_collection.products limit: section.settings.product_count %}
          {% render 'product-card', product: product %}
        {% else %}
          <p>No products found.</p>
        {% endfor %}
      {% else %}
        <p>Select a collection in the section settings.</p>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Featured products",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Featured"},
    {"type": "collection", "id": "collection", "label": "Collection"},
    {"type": "range", "id": "product_count", "label": "Number of products", "min": 1, "max": 12, "step": 1, "default": 4}
  ],
  "presets": [{"name": "Featured products"}]
}
{% endschema %}
